{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">

        {% for post in posts %}

            <div class="card post-abstract">
                <img src="{{ post.image }}" class="card-img-top" alt="{{ post.title }}">
                <div class="card-body">
                    <span class="badge bg-secondary">{{ post.category.name }}</span>
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">Créé par {{ post.author }} le {{ post.createdAt|date("d/m/Y") }}</p>
                    <p class="card-text">{{ post.content|slice(0,150) }} [...]</p>
                    <a href="{{ path('post.index', {'slug':post.slug}) }}" class="card-link btn btn-primary">Lire la suite</a>
                </div>
            </div>
            
        {% endfor %}

    </div>

{% endblock %}